<div class="pool_show_background">
  <p id="debug">hello</p>
  <div class="pool_show_new">
    <p class="pool_show_new_title">Choose New Player</p>
    <%= form_for [@pool, @user] do |f| %>
      <%= f.label :name %>:
      <%= f.text_field :name %>

      <%= f.submit "Go!" %>
    <% end %>
  </div>
  <div class="pool_show_users">
    <div class="pills">
      <div class="one">
        <% @users.each do |user| %>
          <div id=<%= user.id %> class="drag" onclick="drag(<%= user.id %>)">
            <%= user.name %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="two">
    <div class="win">
      win
    </div>
    <br>
    <div class="just a play">
      just a play
    </div>
  </div>
</div>
